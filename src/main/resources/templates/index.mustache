<!-- 현재 머스테치 파일 기준으로 다른 파일을 불러옴 -->
{{>layout/header}}

<h1>스프링 부트로 시작하는 웹 서비스 Ver.2</h1>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>

      <!--  머스테치 ture-->
      {{#loginUserName}}
        User : <span id="user">{{loginUserName}}</span>  ||
        Email : <span id="email">{{userEmail}}</span>
        <!-- 스프링 시큐리티 제공 logout-->
        <a href="/logout" class="btn btn-info active" role="button">logout</a>
      {{/loginUserName}}

      <!--  머스테치 false-->
      {{^loginUserName}}
        <!--  스프링 시큐리티 제공 login-->
        <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Login via Google</a>
      {{/loginUserName}}

    </div>
  </div>
  <br>
<!--  목록 출력 영역-->
  <table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
      <th>게시글 번호</th>
      <th>제목</th>
      <th>작성자</th>
      <th>최종 수정일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    <!--머스테치 문법 - posts list를 순회!-->
    {{#posts}}
      <tr>
        <!--list에서 뽑아낸 객체 필드-->
        <td>{{id}}</td>
        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
        <td>{{author}}</td>
        <td>{{modifiedDate}}</td>
      </tr>
    {{/posts}}
    </tbody>
  </table>
</div>

{{>layout/footer}}
